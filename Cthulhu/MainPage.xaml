<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cthulhu.MainPage">


    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
            BackgroundColor="SlateGrey">
            <Image
            x:Name="ImageItem"
            Source="cthulhu.png"
            HeightRequest="500"
            VerticalOptions="Center"
            Aspect="AspectFit">

            </Image>
            <Label
            HorizontalOptions="Center"
            VerticalOptions="Center"
            TextColor="#1f1f1f"
            FontSize="Large"
            Margin="0,-100,0,0"
            FontAttributes="Bold"
            FontFamily="sans-serif"
            Text="Cthulhu is hungry for subtitles" />

    </VerticalStackLayout>



</ContentPage>
